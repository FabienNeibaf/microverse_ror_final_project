<div class="notifications">
  <header>
    <h3>
      Your notifications
    </h3>
  </header>
  <% if @notifs.any? %>
    <ul>
      <% @notifs.each do |notif| %>
        <li>
          <%= link_to notif.sender do %>
            <span class="photo">
            </span>
            <%= notif.content %>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>